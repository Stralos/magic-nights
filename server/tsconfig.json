{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "./",
    "target": "es5",
    "lib": ["es6"],
  },
  "include": [
      "src/index.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
